#!/bin/bash
# prerm script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Set current major version that is being installed. 
SRC_GNSSTK_VER=__VER__
TGT_FILE=/etc/profile.d/gnsstk_enable.sh

case "$1" in
    remove|upgrade|deconfigure)
        # Attempting to remove gnsstk_enable.sh script from /etc/profile.d
        # It will delete for this use case:
        #   1) target file already exists but target gnsstk major version is older
        #         than prerm gnsstk major version
        if [ -f "$TGT_FILE" ]; then
            TGT_GNSSTK_VER=$(sed -n -E -e 's/^GNSSTK_VER=([0-9]+).*/\1/p' $TGT_FILE)
            if [ $TGT_GNSSTK_VER -gt $SRC_GNSSTK_VER ]; then
                echo -e "\nTarget gnsstk major version $TGT_GNSSTK_VER is greater than source gnsstk major version $SRC_GNSSTK_VER"
                echo -e "Therefore, not deleting $TGT_FILE\n"
            else
                echo -e "\nDeleting $TGT_FILE"
                rm -f $TGT_FILE
            fi
        fi  
        ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0